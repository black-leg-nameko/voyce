{
  "expo": {
    "name": "Voyce Guide",
    "slug": "voyce-guide",
    "version": "1.0.0",
    "scheme": "voyceguide",
    "orientation": "portrait",
    "platforms": ["ios", "android"],
    "assetBundlePatterns": ["**/*"],
    "runtimeVersion": {
      "policy": "appVersion"
    },
    "updates": {
      "fallbackToCacheTimeout": 0
    },
    "ios": {
      "bundleIdentifier": "com.voyce.guide",
      "buildNumber": "1",
      "supportsTablet": true,
      "infoPlist": {
        "NSMicrophoneUsageDescription": "観光案内の音声質問を認識するためにマイクを使用します。",
        "ITSAppUsesNonExemptEncryption": false
      }
    },
    "android": {
      "package": "com.voyce.guide",
      "versionCode": 1,
      "permissions": ["RECORD_AUDIO"]
    }
  }
}
